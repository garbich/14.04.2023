#include <iostream>
using namespace std;
// Task 2
double findAverage(int arr[], int size) {
    int sum = 0;

    for (int i = 0; i < size; i++) {
        sum += arr[i];
    }

    double average = static_cast<double>(sum) / size;
    return average;
}

int main() {
    int arr[] = { 6, 4, 6, 8, 10 };
    int size = sizeof(arr) / sizeof(arr[0]);

    double result = findAverage(arr, size);

    cout << "Average: " << result << endl;

    
}
